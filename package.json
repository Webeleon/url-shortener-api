{
  "name": "url-shortener",
  "version": "0.0.1",
  "description": "A simple url shortener API",
  "main": "lib/main.js",
  "types": "lib/main.d.ts",
  "scripts": {
    "start:production": "npm run build && node dist/main.js",
    "start:dev": "npx nodemon ./src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "patch": "npm run build && npm version patch && npm publish",
    "format": "prettier --write '**/*.ts'",
    "build": "tsc",
    "generate-doc": "typedoc",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Webeleon/typecript-npm-package-starter"
  },
  "bugs": {
    "url": "https://github.com/Webeleon/typecript-npm-package-starter/issues"
  },
  "contributors": [
    {
      "name": "Julien Prugne",
      "email": "julien@webeleon.dev"
    }
  ],
  "keywords": [
    "webeleon",
    "typescript"
  ],
  "author": "Julien Prugne<juliene@webeleon.dev>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "17.8.1",
    "@commitlint/config-conventional": "17.8.1",
    "@shelf/jest-mongodb": "^4.1.4",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.13",
    "@types/node": "18.19.54",
    "@types/supertest": "2.0.16",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lint-staged": "13.3.0",
    "nodemon": "2.0.22",
    "prettier": "2.8.8",
    "standard-version": "9.5.0",
    "supertest": "6.3.3",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typedoc": "0.25.4",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "helmet": "6.2.0",
    "mongoose": "6.12.3"
  },
  "lint-staged": {
    "*.{ts}": "prettier --write"
  }
}
